---
import { NavLinks } from "../model/NavLinks";
import {
    ArrowUp,
    Facebook,
    Instagram,
    Linkedin,
    MapPin,
    PhoneCall,
} from "lucide-react";
import IconButton from "./shared/IconButton.astro";
---

<script>
    const tgt = document.querySelector("#tgt");
    const heroSection = document.getElementById("hero");

    tgt?.addEventListener("click", () => {
        heroSection?.scrollIntoView({ behavior: "smooth" });
    });
</script>

<div
    class="relative w-full h-[150vh] md:h-[70vh] bg-[#683292] flex flex-col items-center justify-evenly"
>
    <div class="flex md:flex-row flex-col items-center justify-start gap-16">
        <img
            src="/asset/footer/logoFooter.webp"
            class="w-[185px] h-[100px] object-fill"
            alt=""
        />
        <div class="flex flex-col items-center">
            <h2 class="text-white font-medium mb-4 text-2xl">Navigation</h2>
            <div class="grid grid-cols-2">
                {
                    NavLinks.map((item) => (
                        <li class="text-gray-200">{item.title}</li>
                    ))
                }
            </div>
        </div>
        <div class="flex flex-col items-center gap-5">
            <div class="flex items-center gap-5">
                <IconButton
                    className="bg-white text-white bg-opacity-10 px-3 py-3 rounded-full"
                >
                    <MapPin />
                </IconButton>

                <div class="flex flex-col">
                    <span class="font-bold text-white mb-2">Address</span>
                    <p class="text-gray-400 w-2/3">
                        121 King Street Melbourne, 3000, Australia
                    </p>
                </div>
            </div>
            <div class="flex items-center gap-5">
                <i
                    class="bg-white text-white bg-opacity-10 px-3 py-3 rounded-full"
                >
                    <MapPin />
                </i>

                <div class="flex flex-col">
                    <span class="font-bold text-white mb-2">Address</span>
                    <p class="text-gray-400 w-2/3">
                        121 King Street Melbourne, 3000, Australia
                    </p>
                </div>
            </div>
        </div>
        <div class="flex flex-col items-start md:items-center">
            <div class="flex items-center">
                <PhoneCall className="text-white" />
                <div class="flex flex-col items-start gap-0 p-4">
                    <strong class="text-2xl text-white">+12345678901</strong>
                    <p class="text-gray-400">Got Questions? Call us 24/7</p>
                </div>
            </div>
            <div class="flex items-center gap-5">
                <IconButton
                    className="bg-white text-white bg-opacity-10 px-3 py-3 rounded-full hover:bg-purple-900 duration-200 transition-all cursor-pointer"
                >
                    <Facebook />
                </IconButton>
                <IconButton
                    className="bg-white text-white bg-opacity-10 px-3 py-3 rounded-full hover:bg-purple-900 duration-200 transition-all cursor-pointer"
                >
                    <Linkedin />
                </IconButton>
                <IconButton
                    className="bg-white text-white bg-opacity-10 px-3 py-3 rounded-full hover:bg-purple-900 duration-200 transition-all cursor-pointer"
                >
                    <Instagram />
                </IconButton>
            </div>
        </div>
    </div>
    <div class="flex flex-col items-center mt-24 text-center">
        <div class="min-w-[350px] md:min-w-[800px] bg-gray-100 opacity-40 py-[.9px]"></div>
        <span class="mt-3 text-white"
            >Copyright Â© 2024 BlackRise Themes Inc All rights reserved.</span
        >
    </div>
    <div class="absolute bottom-0 left-0">
        <img src="/asset/hero/leftTopImgHero.webp" class="w-[150px]" alt="" />
    </div>
    <div class="absolute bottom-[15%] right-[5%]">
        <button
            id="tgt"
            class="px-6 py-6 rounded-md text-white bg-[#F73D8E] cursor-pointer hover:scale-105 duration-300 transition-all"
        >
            <ArrowUp />
        </button>
    </div>
</div>
