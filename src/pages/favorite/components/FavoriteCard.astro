---
import { ShoppingCart } from "lucide-react";

interface props{
  title:string;
  desc:string;
  image:string;
}
const{title,desc,image}=Astro.props
---

<div
  class="w-[280px] h-[65vh] z-10 overflow-hidden cursor-pointer hover:opacity-70 duration-200 transition-all  flex flex-col mx-auto p-4 rounded-[20px] bg-white shadow-md"
> 
  <img
    src={image}
    class="h-[200px] object-fill"
    alt=""
  />
  <div class="mt-3">
    <p class="font-bold text-3xl text-start mb-2">{title}</p>
    <p class="text-gray-500 mb-3 text-start">
     {desc}
    </p>
    <div class="flex items-center justify-between gap-2">
      <strong class="text-2xl text-[#F73D8E]">$5.49</strong>
      <div class={`px-2 py-2 bg-purple-900 text-white rounded-full`}>
        <ShoppingCart />
      </div>
    </div>
  </div>
</div>
